<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/padOperatorBackgroundColor"
    app:rowCount="5"
    app:columnCount="1"
    app:orientation="vertical">

    <ImageButton android:id="@+id/delete_op" style="@style/PadButtonStyle"
                 android:src="@drawable/ic_backspace"/>

    <Button android:id="@+id/divide_op" style="@style/PadButtonStyle"
            android:text="@string/divide_op"/>

    <Button android:id="@+id/multiply_op" style="@style/PadButtonStyle"
            android:text="@string/multiply_op"/>

    <Button android:id="@+id/subtract_op" style="@style/PadButtonStyle"
            android:text="@string/substract_op"/>

    <Button android:id="@+id/add_op" style="@style/PadButtonStyle"
            android:text="@string/add_op"/>

</android.support.v7.widget.GridLayout>