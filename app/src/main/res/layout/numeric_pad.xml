<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/padNumericBackgroundColor"
    app:columnCount="3"
    app:elevation="2dp"
    app:orientation="horizontal"
    app:rowCount="4">

    <Button
        android:id="@+id/digit_1"
        style="@style/PadButtonStyle"/>

    <Button
        android:id="@+id/digit_2"
        style="@style/PadButtonStyle"/>

    <Button
        android:id="@+id/digit_3"
        style="@style/PadButtonStyle"/>

    <Button
        android:id="@+id/digit_4"
        style="@style/PadButtonStyle"/>

    <Button
        android:id="@+id/digit_5"
        style="@style/PadButtonStyle"/>

    <Button
        android:id="@+id/digit_6"
        style="@style/PadButtonStyle"/>

    <Button
        android:id="@+id/digit_7"
        style="@style/PadButtonStyle"/>

    <Button
        android:id="@+id/digit_8"
        style="@style/PadButtonStyle"/>

    <Button
        android:id="@+id/digit_9"
        style="@style/PadButtonStyle"/>

    <Button
        android:id="@+id/decimal"
        style="@style/PadButtonStyle"
        android:text="@string/decimal_symbol"/>

    <Button
        android:id="@+id/digit_0"
        style="@style/PadButtonStyle"/>

    <Button
        android:id="@+id/eq"
        style="@style/PadButtonStyle"
        android:text="@string/equals_symbol"/>

</android.support.v7.widget.GridLayout>

