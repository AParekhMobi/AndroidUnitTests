<resources>
    <style name="DisplayEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">bottom|end</item>
    </style>

    <style name="DisplayEditTextStyle.Formula">
        <item name="android:textSize">98sp</item>
        <item name="android:textColor">@color/displayFormulaTextColor</item>
    </style>

    <style name="DisplayEditTextStyle.Result">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/displayResultTextColor</item>
    </style>

    <style name="PadButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/padButtonTextColor</item>
        <item name="android:background">@drawable/pad_button_bg</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PadButtonStyle.Small">
        <item name="android:textSize">18sp</item>
    </style>


</resources>
